{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "index.ts", "db.ts"],
  "exclude": ["node_modules"]
}
